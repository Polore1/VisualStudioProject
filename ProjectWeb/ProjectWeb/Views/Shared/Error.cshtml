@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <!-- Error Header -->
    <div class="text-center mb-4">
        <h1 class="text-danger display-4">Error</h1>
        <h2 class="text-danger">An error occurred while processing your request.</h2>
    </div>

    <!-- Request ID Section -->
    @if (Model.ShowRequestId)
    {
        <div class="alert alert-info">
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </div>
    }

    <!-- Development Mode Info -->
    <div class="alert alert-warning">
        <h3>Development Mode</h3>
        <p>Swapping to <strong>Development</strong> environment will display more detailed information about the error that occurred.</p>
        <p>
            <strong>The Development environment shouldn't be enabled for deployed applications.</strong><br />
            It can result in displaying sensitive information from exceptions to end users. For local debugging, enable the
            <strong>Development</strong> environment by setting the
            <strong>ASPNETCORE_ENVIRONMENT</strong> environment variable to <strong>Development</strong>
            and restarting the app.
        </p>
    </div>
</div>
