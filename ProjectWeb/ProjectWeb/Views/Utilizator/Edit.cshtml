@model ProjectWeb.Models.Entities.Utilizator

<h1>Editare Utilizator</h1>

@*verificare extra daca exista sau nu utilizator cu acel ID*@
@if(Model is null){

    <p>Nu am gasit nici un utilizator cu acest ID  </p>
}
else
{
    <form method="post">
        <div class=" mt-3">
            <label class="form-label">IdUtilizator</label>
            <input type="text" class="form-control" asp-for="IdUtilizator" readonly />
        </div>

        <div class=" mt-3">
            <label class="form-label">Nume</label>
            <input type="text" class="form-control" asp-for="Nume" />
        </div>

        <div class=" mt-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="Email" />
        </div>

        <div class=" mt-3">
            <label class="form-label">Parola</label>
            <input type="text" class="form-control" asp-for="Parola" />
        </div>

        <div class=" mt-3">
            @*<label for="Rol">Rol</label>
            <select class="form-control" asp-for="Rol" asp-items="Html.GetEnumSelectList<RolUtilizator>()"></select>*@

            <input type="checkbox" class="form-check-input" id="Pasager" asp-for="Pasager" />
            <label class="form-check-label" for="Pasager">Pasager</label>
        </div>

        <div class=" mt-3">
            <a class="btn btn-secondary ms-3" asp-controller="Utilizator" asp-action="List">Înapoi la listă</a>
            <button type="submit" class="btn btn-primary">Salveaza modificarile</button>
        </div>
    </form>
}
