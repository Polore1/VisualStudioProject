@model ProjectWeb.Models.Entities.Utilizator

<div class="container mt-5">
    <h1 class="text-center mb-4">Editare Utilizator</h1>

    @* Verificare dacă utilizatorul există *@
    @if (Model == null)
    {
        <div class="alert alert-warning text-center">
            <p>Nu am găsit niciun utilizator cu acest ID.</p>
        </div>
    }
    else
    {
        <form method="post" class="bg-light p-4 border rounded shadow-sm">
            <div class="mb-3">
                <label for="IdUtilizator" class="form-label">ID Utilizator</label>
                <input type="text" class="form-control" asp-for="IdUtilizator" readonly />
            </div>

            <div class="mb-3">
                <label for="Nume" class="form-label">Nume</label>
                <input type="text" class="form-control" asp-for="Nume" placeholder="Introduceți numele complet" />
                <span asp-validation-for="Nume" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input type="email" class="form-control" asp-for="Email" placeholder="Introduceți adresa de email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Parola" class="form-label">Parola</label>
                <input type="password" class="form-control" asp-for="Parola" placeholder="Introduceți parola" />
                <span asp-validation-for="Parola" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="Pasager" asp-for="Pasager" />
                <label class="form-check-label" for="Pasager">Pasager</label>
            </div>

            <div class="d-flex justify-content-between">
                <a class="btn btn-secondary" asp-controller="Utilizator" asp-action="List">Înapoi la listă</a>
                <button type="submit" class="btn btn-primary">Salvează modificările</button>
            </div>
        </form>
    }
</div>

<!-- Include pentru validare client-side -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
