@{
}

@model ProjectWeb.Models.Entities.Zbor

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h1>Detalii Zbor</h1>

@if (Model is null)
{
    <p>Nu am găsit nici un zbor cu acest ID.</p>
}
else
{
    <div class="mt-3">
        <label for="IdZbor">ID Zbor</label>
        <input type="text" class="form-control" id="IdZbor" asp-for="IdZbor" disabled />
    </div>

    <div class="mt-3">
        <label for="NumeCompanie">Nume Companie</label>
        <input type="text" class="form-control" id="NumeCompanie" asp-for="NumeCompanie" disabled />
    </div>

    <div class="mt-3">
        <label for="Imbarcare">Locul de Îmbarcare</label>
        <input type="text" class="form-control" id="Imbarcare" asp-for="Imbarcare" disabled />
    </div>

    <div class="mt-3">
        <label for="Destinatie">Destinație</label>
        <input type="text" class="form-control" id="Destinatie" asp-for="Destinatie" disabled />
    </div>

    <div class="mt-3">
        <label for="DataPlecare">Data Plecare</label>
        <input type="datetime-local" class="form-control" id="DataPlecare" asp-for="DataPlecare" disabled />
    </div>

    <div class="mt-3">
        <label for="GreutateMaximaBagaj">Greutate Maximă Bagaj (kg)</label>
        <input type="number" class="form-control" id="GreutateMaximaBagaj" asp-for="GreutateMaximaBagaj" disabled />
    </div>

    <div class="mt-3">
        <label for="TaxaSuplimentara">Taxa Suplimentara bagaj</label>
        <input type="number" class="form-control" id="TaxaSuplimentara" asp-for="TaxaSuplimentara" disabled/>
    </div>

    <div class="mt-3">
        <label for="LocuriDisponibile">Locuri Disponibile</label>
        <input type="number" class="form-control" id="LocuriDisponibile" asp-for="LocuriDisponibile" disabled />
    </div>

    <div class="mt-3">
        <label for="Status">Status</label>
        <input type="text" class="form-control" id="Status" asp-for="Status" disabled />
    </div>

    <div class="mt-3">
        <a class="btn btn-secondary" asp-controller="Zbor" asp-action="List">Înapoi la listă</a>

        @* Buton pentru redirecționare către pagina de Check-in doar dacă statusul este "Planificat" *@
        <a class="btn btn-primary" asp-controller="Checkin" asp-action="Add" asp-route-idZbor="@Model.IdZbor">Mergi la Check-in</a>
        
    </div>
}
