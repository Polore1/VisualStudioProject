@model ProjectWeb.Models.Entities.Zbor


@{
    ViewData["Title"] = "Detalii Zbor";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4 text-primary">@ViewData["Title"]</h1>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (Model == null)
    {
        <p class="text-danger">Nu am găsit nici un zbor cu acest ID.</p>
    }
    else
    {
        <div class="card shadow-sm p-4">
            <h3 class="card-title mb-4">Informații Zbor</h3>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="IdZbor" class="form-label">ID Zbor</label>
                    <input type="text" class="form-control" id="IdZbor" asp-for="IdZbor" disabled />
                </div>
                <div class="col-md-6 mb-3">
                    <label for="NumeCompanie" class="form-label">Nume Companie</label>
                    <input type="text" class="form-control" id="NumeCompanie" asp-for="NumeCompanie" disabled />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="Imbarcare" class="form-label">Locul de Îmbarcare</label>
                    <input type="text" class="form-control" id="Imbarcare" asp-for="Imbarcare" disabled />
                </div>
                <div class="col-md-6 mb-3">
                    <label for="Destinatie" class="form-label">Destinație</label>
                    <input type="text" class="form-control" id="Destinatie" asp-for="Destinatie" disabled />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="DataPlecare" class="form-label">Data Plecare</label>
                    <input type="datetime-local" class="form-control" id="DataPlecare" asp-for="DataPlecare" disabled />
                </div>
                <div class="col-md-6 mb-3">
                    <label for="GreutateMaximaBagaj" class="form-label">Greutate Maximă Bagaj (kg)</label>
                    <input type="number" class="form-control" id="GreutateMaximaBagaj" asp-for="GreutateMaximaBagaj" disabled />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="TaxaSuplimentara" class="form-label">Taxa Suplimentară Bagaj</label>
                    <input type="number" class="form-control" id="TaxaSuplimentara" asp-for="TaxaSuplimentara" disabled />
                </div>
                <div class="col-md-6 mb-3">
                    <label for="LocuriDisponibile" class="form-label">Locuri Disponibile</label>
                    <input type="number" class="form-control" id="LocuriDisponibile" asp-for="LocuriDisponibile" disabled />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6 mb-3">
                    <label for="Status" class="form-label">Status</label>
                    <input type="text" class="form-control" id="Status" asp-for="Status" disabled />
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a class="btn btn-secondary" asp-controller="Zbor" asp-action="List">Înapoi la listă</a>

                @* Butonul Check-in este activ doar dacă statusul este "Planificat" *@
                @if (Model.Status == "Planificat")
                {
                    <a class="btn btn-success" asp-controller="Checkin" asp-action="Add" asp-route-idZbor="@Model.IdZbor">Mergi la Check-in</a>
                }
                else
                {
                    <span class="btn btn-secondary disabled">Check-in indisponibil</span>
                }
            </div>
        </div>
    }
</div>

