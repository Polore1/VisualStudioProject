@model ProjectWeb.Models.Entities.Zbor
@{
    ViewData["Title"] = "Editare Zbor";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4 text-primary">@ViewData["Title"]</h1>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    @if (Model == null)
    {
        <p class="text-danger">Nu am găsit nici un zbor cu acest ID.</p>
    }
    else
    {
        <div class="card shadow-sm p-4">
            <h3 class="card-title mb-4">Modifică Informațiile Zborului</h3>
            <form method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="IdZbor" class="form-label">ID Zbor</label>
                        <input type="text" class="form-control" id="IdZbor" asp-for="IdZbor" disabled />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="NumeCompanie" class="form-label">Nume Companie</label>
                        <input type="text" class="form-control" id="NumeCompanie" asp-for="NumeCompanie" />
                        <span asp-validation-for="NumeCompanie" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="Imbarcare" class="form-label">Locul de Îmbarcare</label>
                        <input type="text" class="form-control" id="Imbarcare" asp-for="Imbarcare" />
                        <span asp-validation-for="Imbarcare" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="Destinatie" class="form-label">Destinație</label>
                        <input type="text" class="form-control" id="Destinatie" asp-for="Destinatie" />
                        <span asp-validation-for="Destinatie" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="DataPlecare" class="form-label">Data Plecare</label>
                        <input type="datetime-local" class="form-control" id="DataPlecare" asp-for="DataPlecare" />
                        <span asp-validation-for="DataPlecare" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="GreutateMaximaBagaj" class="form-label">Greutate Maximă Bagaj (kg)</label>
                        <input type="number" class="form-control" id="GreutateMaximaBagaj" asp-for="GreutateMaximaBagaj" step="0.01" />
                        <span asp-validation-for="GreutateMaximaBagaj" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="LocuriDisponibile" class="form-label">Locuri Disponibile</label>
                        <input type="number" class="form-control" id="LocuriDisponibile" asp-for="LocuriDisponibile" />
                        <span asp-validation-for="LocuriDisponibile" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="Status" class="form-label">Status</label>
                        <select class="form-control" id="Status" asp-for="Status">
                            <option value="In Asteptare">In Asteptare</option>
                            <option value="Anulat">Anulat</option>
                            <option value="Confirmat">Confirmat</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a class="btn btn-secondary" asp-controller="Zbor" asp-action="List">Înapoi la listă</a>
                    <button type="submit" class="btn btn-primary">Salvează Modificările</button>
                </div>
            </form>
        </div>
    }
</div>

