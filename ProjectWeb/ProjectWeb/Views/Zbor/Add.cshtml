@model ProjectWeb.Models.AddZborViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
    // Verifică dacă există un mesaj de eroare în TempData
    var errorMessage = TempData["ErrorMessage"] as string;
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Eroare:</strong> @errorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h1 class="text-center mb-4">Adăugare Zbor</h1>

<form method="post" class="needs-validation" novalidate>
    <div class="row g-3">
        <div class="col-md-6">
            <div class="mb-3">
                <label for="NumeCompanie" class="form-label">Nume Companie</label>
                <input type="text" class="form-control" asp-for="NumeCompanie" id="NumeCompanie" required />
                <div class="invalid-feedback">Te rugăm să completezi acest câmp.</div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label for="Imbarcare" class="form-label">Locul de Imbarcare</label>
                <input type="text" class="form-control" asp-for="Imbarcare" id="Imbarcare" required />
                <span asp-validation-for="Imbarcare" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-md-6">
            <div class="mb-3">
                <label for="Destinatie" class="form-label">Destinație</label>
                <input type="text" class="form-control" asp-for="Destinatie" id="Destinatie" required />
                <span asp-validation-for="Destinatie" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label for="DataPlecare" class="form-label">Data Plecare</label>
                <input type="datetime-local" class="form-control" asp-for="DataPlecare" id="DataPlecare" required />
                <span asp-validation-for="DataPlecare" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-md-6">
            <div class="mb-3">
                <label for="GreutateMaximaBagaj" class="form-label">Greutate Maximă Bagaj (kg)</label>
                <input type="number" class="form-control" asp-for="GreutateMaximaBagaj" step="0.01" id="GreutateMaximaBagaj" required />
                <span asp-validation-for="GreutateMaximaBagaj" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label for="LocuriDisponibile" class="form-label">Locuri Disponibile</label>
                <input type="number" class="form-control" asp-for="LocuriDisponibile" id="LocuriDisponibile" required />
                <span asp-validation-for="LocuriDisponibile" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <label for="Status" class="form-label">Status</label>
        <select class="form-select" asp-for="Status" id="Status" required>
            <option value="">Selectează status</option>
            <option value="In Asteptare">În Așteptare</option>
            <option value="Anulat">Anulat</option>
            <option value="Confirmat">Confirmat</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between">
        <a class="btn btn-secondary" asp-controller="Zbor" asp-action="List">Înapoi la listă</a>
        <button type="submit" class="btn btn-primary">Adaugă Zbor</button>
    </div>
</form>

<!-- Add Bootstrap validation scripts -->
<script>
    (function () {
        'use strict'
        // Select all forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll('.needs-validation')
        // Loop over them and prevent submission
        Array.prototype.slice.call(forms)
            .forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>
